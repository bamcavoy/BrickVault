@{
    ViewData["Title"] = "Home Page";
    List<Product> products = ViewBag.Products;
}

<div class="text-center">
    <img src="~/lib/Logo.png" style="height: 200px"></img>
    <br/> <br/>
    <a href="@Url.Action("Products", "Home")" class="btn btn-secondary">Browse Products</a>
</div>
<br/><br/>
<div class="container">
  <h2>Recommended Products</h2>
  <br/>
  <div class="row">
    <div class="col-1"></div>
    @for (var i = 0; i < 5; i++)
    {
      <div class="col-2 mb-4">
        <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@products[i].ProductId" class="card-link"
           style="text-decoration: none; color: inherit;">
        <div class="card">
          <div class="card-body">
            <!-- Placeholder for card content -->
            <p class="fw-light">card content here</p>
            <br/>
            <p class="fw-bold">@products[i].Name</p>
          </div>
        </div>
        </a>
      </div>
    }
    <div class="col-1"></div>
  </div>
</div>
