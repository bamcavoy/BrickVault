@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link fw-bold text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello {Name}@User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link fw-bold text-white">Logout</button>
            </form>
        </li>
        <li class="nav-item d-flex justify-content-center align-items-center">
            <a asp-controller="Home" asp-action="Cart"><i class="fa-solid fa-cart-shopping fa-xl btn" style="color: #ffffff"></i></a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link fw-bold text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>