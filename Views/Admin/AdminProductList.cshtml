@model IEnumerable<BrickVault.Models.Product>

<table>
    <thead>
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Year</th>
        <th>Price</th>
        <th>Image</th>
        <!-- Add more columns as needed -->
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td style="width: 400px; height: 300px;">
                    <img src="@product.ImgLink" alt="Product Image" style="width: 100%; height: 100%; object-fit: cover;" />
                </td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Year</td>
                <td><a asp-action="AdminEditProduct" asp-route-id="@product.ProductId">Edit</a></td>
                <td><a asp-action="DeleteProductConfirmation" asp-route-id="@product.ProductId">Delete</a></td>
            </tr>
        }
    </tbody>

</table>

<a href="@Url.Action("AddProduct")">Add Product</a>