@model BrickVault.Models.AspNetUser

@{
    ViewBag.Title = "Delete User Confirmation";
    Layout = "_Layout";
}

<h2>Delete User Confirmation</h2>

<p>Are you sure you want to delete the user @Model.UserName?</p>

<form asp-action="DeleteUserConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Yes, Delete</button>
    <a asp-action="AdminUserList" class="btn btn-secondary">No, Cancel</a>
</form>